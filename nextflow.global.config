singularity.autoMounts = true

env {
  PYTHONNOUSERSITE = 1
}

profiles {
    standard {
		process {
		  queue = 'long-sl7,biocore-el7,short-sl7' 
		  memory='12G'
		  cache='lenient'
		  container = 'biocorecrg/mopprepr:0.7'
		  containerOptions = { workflow.containerEngine == "docker" ? '-u $(id -u):$(id -g)': null}
		  withLabel: big_cpus {
				cpus = 8
				memory = '12G'
		  }
		  withLabel: big_mem_cpus {
				time = '6h'
				cpus = 8
				memory = '20G'
		  }
		  withLabel: demulti {
				container = 'biocorecrg/mopdem:0.2'
				cpus = 8
				memory = '20G'
		  }
		  withLabel: basecall_cpus {
				container = 'biocorecrg/mopbasecall:0.1'
				cpus = 8
				memory = '8G'
		  }
		  withLabel: basecall_gpus {
				maxForks = 1
				container = 'biocorecrg/mopbasecall:0.1'
				memory = '8G'
			containerOptions = { workflow.containerEngine == "singularity" ? '--nv':
				   ( workflow.containerEngine == "docker" ? '-u $(id -u):$(id -g) --gpus all': null ) } 
		  }
		  withLabel: variant_proc {
			   container = 'biocorecrg/mopmod:0.5'
			   cpus = 8
			   memory = '30G'
			   time = '6h'
		  } 
		}    
    }   
    local {
        process {
    		executor = 'local'
    		cpus = 1
    		memory = '12GB'    
  		    cache='lenient'
		    container = 'biocorecrg/mopprepr:0.7'
		    containerOptions = { workflow.containerEngine == "docker" ? '-u $(id -u):$(id -g)': null}
		    withLabel: big_cpus {
				cpus = 1
		    }
		    withLabel: big_mem_cpus {
				cpus = 1
		    }
		    withLabel: demulti {
				container = 'biocorecrg/mopdem:0.2'
				cpus = 1
		    }
		    withLabel: basecall_cpus {
				container = 'biocorecrg/mopbasecall:0.1'
				cpus = 1
 		    }
		    withLabel: basecall_gpus {
				maxForks = 1
				container = 'biocorecrg/mopbasecall:0.1'
			    containerOptions = { workflow.containerEngine == "singularity" ? '--nv':
				   ( workflow.containerEngine == "docker" ? '-u $(id -u):$(id -g) --gpus all': null ) } 
		    }
		    withLabel: variant_proc {
			   container = 'biocorecrg/mopmod:0.5'
			   cpus = 1
		   } 
		}
    }
    cluster {
		process {
		  executor = 'sge'
                  penv = 'smp'
                  queue = 'long-sl7,biocore-el7,short-sl7' 
		  memory='12G'
		  cache='lenient'
		  container = 'biocorecrg/mopprepr:0.7'
		  containerOptions = { workflow.containerEngine == "docker" ? '-u $(id -u):$(id -g)': null}
		  withLabel: big_cpus {
				cpus = 8
				memory = '12G'
		  }
		  withLabel: big_mem_cpus {
				time = '6h'
				cpus = 8
				memory = '20G'
		  }
		  withLabel: demulti {
				container = 'biocorecrg/mopdem:0.2'
				cpus = 8
				memory = '20G'
		  }
		  withLabel: basecall_cpus {
				container = 'biocorecrg/mopbasecall:0.1'
				cpus = 8
				memory = '8G'
		  }
		  withLabel: variant_proc {
			   container = 'biocorecrg/mopmod:0.5'
			   cpus = 8
			   memory = '30G'
			   time = '6h'
		  } 		
		  withLabel: basecall_gpus {
        		queue = 'gpu'
        		container = 'biocorecrg/mopbasecall:0.1'
        		memory = '8G'
        		clusterOptions = '-l gpu=1'
                	singularity.enabled = true
        		singularity.envWhitelist = "CUDA_VISIBLE_DEVICES,SGE_HGR_gpu"
        		containerOptions = { workflow.containerEngine == "singularity" ? '--nv':
           		( workflow.containerEngine == "docker" ? '-u $(id -u):$(id -g) --gpus all': null ) }
		}	
	 }
   }
}
